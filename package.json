{
  "name": "verotrades",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:clean": "rmdir /s /q .next && npm run build",
    "dev:clean": "rmdir /s /q .next && npm run dev",
    "dev:stable": "npm run build:clean && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "jest --testPathPattern=performance --testTimeout=30000",
    "test:performance-comprehensive": "node test-performance-comprehensive.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --coverage --watchAll=false && playwright test",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.3",
    "gsap": "^3.13.0",
    "lucide-react": "^0.447.0",
    "next": "^14.2.33",
    "playwright": "^1.57.0",
    "puppeteer": "^24.32.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/supertest": "^2.0.16",
    "autoprefixer": "^10.4.22",
    "critters": "^0.0.23",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "styled-jsx": "^5.1.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  },
  "resolutions": {
    "styled-jsx": "^5.1.0"
  }
}
